<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="2.5"
	type="template"
	method="upgrade" client="site">
	<name>JA T3v3 Blank</name>
	<version>2.5.1</version>
	<creationDate>July 2012</creationDate>
	<author>JoomlArt.com</author>
	<authorEmail>webmaster@joomlart.com</authorEmail>
	<authorUrl>http://www.joomlart.com</authorUrl>
	<copyright>Copyright (C), J.O.O.M Solutions Co., Ltd. All Rights Reserved.</copyright>
	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<group>ja_t3v3</group>
	<description>	
	<![CDATA[
	Blank template for T3v3 using Bootstrap
		]]>
	</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateInfo.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>assets</folder>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>tpls</folder>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB.tpl_ja_t3v3_blank.ini</language>
		<language tag="en-GB">en-GB.tpl_ja_t3v3_blank.sys.ini</language>
	</languages>

	<positions>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>position-15</position>
	</positions>

	<config>
		<fields name="params" addfieldpath="/plugins/system/jat3v3/includes/depend">

			<fieldset name="layout_params" label="T3V3_PARAMS_LAYOUT">

				<field name="pos_section_main" type="jadepend" default="" label="T3V3_POS_SECTION" description="T3V3_POS_SECTION_DESC" function="@legend" />
				<field name="pos_mainnav" type="japositions" default="mainnav" multiple="0" label="T3V3_POS_MAINNAV" description="T3V3_POS_MAINNAV_DESC" />
				<field name="pos_sidebar-1" type="japositions" default="sidebar-1" multiple="0" label="T3V3_POS_SIDEBAR1" description="T3V3_POS_SIDEBAR1_DESC" />
				<field name="pos_sidebar-2" type="japositions" default="sidebar-2" multiple="0" label="T3V3_POS_SIDEBAR2" description="T3V3_POS_SIDEBAR2_DESC" />
				<field name="pos_mast-col" type="japositions" default="mast-col" multiple="0" label="T3V3_POS_MASTCOL" description="T3V3_POS_MASTCOL_DESC" />
				<field name="pos_mast-col" type="japositions" default="mast-col" multiple="0" label="T3V3_POS_MASTCOL" description="T3V3_POS_MASTCOL_DESC" />

				<field name="pos_section_topsl" type="jadepend" default="" label="T3V3_POS_TOPSL" description="T3V3_POS_TOPSL_DESC" function="@legend" />
				<field name="pos_position-1" type="japositions" default="position-1" multiple="0" label="" description="" />
				<field name="pos_position-2" type="japositions" default="position-2" multiple="0" label="" description="" />
				<field name="pos_position-3" type="japositions" default="position-3" multiple="0" label="" description="" />
				<field name="pos_position-4" type="japositions" default="position-4" multiple="0" label="" description="" />
				<field name="pos_section_botsl" type="jadepend" default="" label="T3V3_POS_BOTSL" description="T3V3_POS_BOTSL_DESC" function="@legend" />
				<field name="pos_position-5" type="japositions" default="position-5" multiple="0" label="" description="" />
				<field name="pos_position-6" type="japositions" default="position-6" multiple="0" label="" description="" />
				<field name="pos_position-7" type="japositions" default="position-7" multiple="0" label="" description="" />
				<field name="pos_position-8" type="japositions" default="position-8" multiple="0" label="" description="" />
				<field name="pos_section_footnav" type="jadepend" default="" label="T3V3_POS_FOOTNAV" description="T3V3_POS_FOOTNAV_DESC" function="@legend" />	
				<field name="pos_footer-1" type="japositions" default="footer-1" multiple="0" label="" description="" />
				<field name="pos_footer-2" type="japositions" default="footer-2" multiple="0" label="" description="" />
				<field name="pos_footer-3" type="japositions" default="footer-3" multiple="0" label="" description="" />
				<field name="pos_footer-4" type="japositions" default="footer-4" multiple="0" label="" description="" />
				<field name="pos_footer-5" type="japositions" default="footer-5" multiple="0" label="" description="" />
				<field name="pos_footer-6" type="japositions" default="footer-6" multiple="0" label="" description="" />


			</fieldset>

			<!-- Sample for add or disable template parameters -->
			<!--fieldset name="menu_params" label="T3V3_PARAMS_MEGAMENU">
				<field name="group_disable" type="jadepend" function="@group">
					<option for="menu_as_bg" value="no">menu_as_bg</option>
				</field>
			</fieldset-->
			
		</fields>
		
		<!-- Sample for add or disable configuration variable -->
		<fields name="jat3v3" addfieldpath="/plugins/system/jat3v3/includes/depend">
			<fieldset name="links_params" label="T3V3_THEMER_FOOTER">
				<field name="T3FooterModuleTitleColor" type="color" default="" label="T3V3_VARS_FOOTER_MOD_TCOLOR_LABEL" description="T3V3_VARS_FOOTER_MOD_TCOLOR_DESC" />
				<field name="T3FooterModuleColor" type="color" default="" label="T3V3_VARS_FOOTER_MOD_COLOR_LABEL" description="T3V3_VARS_FOOTER_MOD_COLOR_DESC" />
			</fieldset>
		</fields>
    </config>
</extension>
